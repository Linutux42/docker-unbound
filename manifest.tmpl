image: linutux/unbound:latest
{{#if build.tags}}
tags:
{{#each build.tags}}
  - {{this}}
{{/each}}
{{/if}}
manifests:
  -
    image: linutux/unbound:{{build.tag}}-linux-amd64
    platform:
      architecture: amd64
      os: linux
  -
    image: linutux/unbound:{{build.tag}}-linux-arm64
    platform:
      architecture: arm64
      os: linux
